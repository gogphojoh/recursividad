@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recursividad</title>
        <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f4f8;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: white;
            box-shadow: 0px 4px 2px -2px gray;
            padding: 10px;
        }

        nav {
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

        nav a {
            text-decoration: none;
            color: black;
            margin-right: 20px;
            font-weight: bold;
            font-size: 18px;
        }

        nav a:first-child {
            color: blue;
        }

        h1 {
            color: #3a63d8;
            text-align: center;
            margin-top: 100px;
        }

        form {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            margin: 20px auto;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        button:hover {
            background-color: #218838;
        }

        footer {
            text-align: center;
            margin-top: 50px;
            font-size: 12px;
            color: gray;
        }

        #resu {
            margin-top: 15px;
            padding: 10px;
            background-color: #f0f4f8;
            border-radius: 5px;
            font-weight: bold;
            text-align: center;
            color: #3a63d8;
        }

        p {
            color: #000000;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <a asp-controller="Home" asp-action="Index">recursividad</a>
            <a href="#">Home</a>
            <a href="#">Privacy</a>
        </nav>
    </header>
    <h1> Elije lo que quieres hacer</h1>
    <ul>
        <!--Aca cada uno de los links manda a llamar a la IActionResult de Homecontroller.cs con el nombre-->
        <!--De cada ejercico (fibonacci, MCD, cambio, Factoriales, Hanoi)-->
        <!--Llama especificamente a los IActionResult que retornan un view (return View())-->
        <li>
        <a asp-controller="Home" asp-action="Factorial"> Factoriales </a>
        </li>

        <li>
        <a asp-controller="Home" asp-action="Fibonacci"> Serie Fibonacci </a>
        </li>

        <li>
            <a asp-controller="Home" asp-action="MCD"> Maximo Comun Divisor</a>
        </li>

        <li>
            <a asp-controller="Home" asp-action="Cambio"> Devolver el cambio exacto</a>
        </li>

        <li>
            <a asp-asp-controller="Home" asp-action="Hanoi">Torre de Hanoi</a>
        </li>
    </ul>
</body>
</html>